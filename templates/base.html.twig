    <body>
        {% block body %}
            {{ include('_includes/menu.html.twig') }}
            <main>
                {% block page_content %}
                {% endblock %}
            </main>

        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
